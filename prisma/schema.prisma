generator client {
  provider = "prisma-client"
  output   = "../src/generated"
}

datasource db {
  provider = "postgresql"
}

model Game {
  id        String       @id @default(cuid())
  status    GameStatus
  field     Json?

  players   GamePlayer[] @relation("GamePlayers")

  winnerId  String?
  winner    GamePlayer?  @relation(fields: [winnerId], references: [id])

  ratingChanges RatingChange[]

  createdAt  DateTime @default(now())
  gameOverAt DateTime?

  @@index([createdAt])
  @@index([gameOverAt])
}

model GamePlayer {
  id     String @id @default(cuid())

  gameId String
  game   Game   @relation("GamePlayers", fields: [gameId], references: [id])

  userId String
  user   User   @relation(fields: [userId], references: [id])

  index  Int

  Game   Game[]

  @@unique([gameId, userId])
  @@index([userId])
}

model User {
  id           String @id @default(cuid())
  login        String @unique
  rating       Int    @default(1000)

  passwordHash String
  salt         String @default("")

  players       GamePlayer[]
  ratingChanges RatingChange[]

  @@index([rating])
}

model RatingChange {
  id        String   @id @default(cuid())

  gameId    String
  game      Game     @relation(fields: [gameId], references: [id])

  userId    String
  user      User     @relation(fields: [userId], references: [id])

  ratingBefore Int
  ratingAfter  Int
  delta        Int

  createdAt DateTime @default(now())

  @@unique([gameId, userId])
  @@index([userId])
  @@index([gameId])
}

enum GameStatus {
  idle
  inProgress
  gameOver
  gameOverDraw
}